@model IEnumerable<JobPortal.Models.Company>

@{
    ViewData["Title"] = "Index";
}

	<div class="banner_1">
		<div class="container">
			<div id="search_wrapper1">
			<div id="search_form" class="clearfix">
				<h1>Start your job search</h1>
				<p>
				<input type="text" class="text" placeholder=" " value="Enter Keyword(s)" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Enter Keyword(s)';}">
				<input type="text" class="text" placeholder=" " value="Location" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Location';}">
				<label class="btn2 btn-2 btn2-1b"><input type="submit" value="Find Jobs"></label>
				</p>
			</div>
			</div>
	</div> 
	</div>	
	<div class="container">
		<div class="single">  
		  @foreach(var item in Model){
		   <div class="col-md-6 recruit company-item">
			   <div class="row">
				   <div class="col-md-4">
					   <img class="company-logo" src="@item.CompanyLogoUrl"  alt="Logo"/>
				   </div>
				   <div class="col-md-8">
					   <h3>@item.CompanyName</h3>
					   <a class="company-url" href="@item.CompanyWebsiteUrl">@item.CompanyWebsiteUrl</a>
				   </div>
				   </div>
		   </div>
		  }
		<div class="clearfix"> </div>
		</div>
	</div>

