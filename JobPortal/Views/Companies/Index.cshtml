@model IEnumerable<JobPortal.Models.Company>

@{
    ViewData["Title"] = "Index";
}

 <div class="container">
         
    <h1>Manage Company</h1>
    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </p>

    <form asp-controller="Companies" asp-action="Index">
    <p>
        <input type="text" name="SearchString" placeholder="Enter Company" />
        <input type="submit" value="Search" />
    </p>
</form>

      <div class="row">
@foreach (var item in Model) {
         <div class="col col-xl-4 my-4">
          <div class="card cssanimation fadeInBottom">
          <div class="row p-2 m-2">
            <div class="col-md-4">
              <img class= "logo-img" src ="@item.CompanyLogoUrl" />
            </div>
            <div class="col-md-8">
                <h6>@item.CompanyName</h6>
                <a href="@item.CompanyWebsiteUrl">
                 @item.CompanyWebsiteUrl
                </a>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id= "@item.Id" >Edit</a>
                <a class="btn btn-primary" asp-action="Details" asp-route-id= "@item.Id" >Details</a>
                <a  class = "btn btn-danger" asp-action="Delete" asp-route-id= "@item.Id" >Delete</a>
            </div>
          </div>
        </div>
        </div>
}
      </div>
    </div>


